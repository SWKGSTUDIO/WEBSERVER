            <script>
                let currentStep = 1;
                let isAnimating = false;

                function goBack() {
                    if (!isAnimating && currentStep > 1) {
                        changeStep(currentStep - 1);
                    }
                }

                function changeStep(step) {
                    if (!isAnimating) {
                        isAnimating = true;
                        const currentScreen = document.getElementById(`screen${currentStep}`);
                        const newScreen = document.getElementById(`screen${step}`);
                        currentScreen.style.opacity = 0;

                        const fadeOutInterval = setInterval(function () {
                            if (currentScreen.style.opacity <= 0) {
                                currentScreen.style.display = 'none';
                                newScreen.style.display = 'block';
                                clearInterval(fadeOutInterval);

                                currentStep = step;
                                document.getElementById('step-info').textContent = `Шаг ${step} из 3`;

                                if (step > 1) {
                                    document.querySelector('.back-button').style.display = 'block';
                                } else {
                                    document.querySelector('.back-button').style.display = 'none';
                                }

                                isAnimating = false;
                            } else {
                                currentScreen.style.opacity -= 0.3;
                            }
                        }, 10);

                        newScreen.style.opacity = 0;

                        const fadeInInterval = setInterval(function () {
                            if (newScreen.style.opacity >= 1) {
                                clearInterval(fadeInInterval);
                            } else {
                                newScreen.style.opacity = parseFloat(newScreen.style.opacity) + 0.1;
                            }
                        }, 10);
                    }
                    requestFullscreen();
                }




                function openDescription(event) {
                    const button = event.target;
                    const description = button.querySelector('.description');
                    const circleIcon = button.querySelector('.circle-icon');

                    // Закрываем описания для других кнопок
                    const allButtons = document.querySelectorAll('.btnbig');
                    allButtons.forEach(otherButton => {
                        if (otherButton !== button) {
                            const otherDescription = otherButton.querySelector('.description');
                            const otherCircleIcon = otherButton.querySelector('.circle-icon');

                            otherDescription.style.display = "none";
                            otherDescription.classList.remove("expanded");
                            otherCircleIcon.classList.remove("expanded");
                        }
                    });

                    if (description.style.display === "none" || description.style.display === "") {
                        description.style.display = "block";
                        description.classList.add("expanded");
                        circleIcon.classList.add("expanded");
                    } else {
                        description.style.display = "none";
                        description.classList.remove("expanded");
                        circleIcon.classList.remove("expanded");
                    }
                }

                // Добавляем обработчик клика для каждой из трех кнопок
                const buttons = document.querySelectorAll('.btnbig');
                buttons.forEach(button => {
                    button.addEventListener('click', openDescription);
                });

            </script>



