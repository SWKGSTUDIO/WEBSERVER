            <script>
                const slider = document.getElementById('slider');
                const minInput = document.getElementById('var1_3');
                const maxInput = document.getElementById('var2_3');

                noUiSlider.create(slider, {
                    start: [50000, 5000000],
                    step: 1, // Здесь используем шаг без запятой
                    connect: true,
                    range: {
                        'min': 50000,
                        'max': 5000000
                    },
                    pips: null
                });

                const handles = slider.querySelectorAll('.noUi-handle');
                handles.forEach(handle => {
                    handle.style.border = 'none';
                    handle.style.top = '50%';
                    handle.style.transform = 'translateY(-50%)';
                    handle.style.width = '35px';
                    handle.style.height = '35px';
                    handle.style.borderRadius = '50%';
                    handle.style.backgroundColor = 'white';
                    handle.style.backgroundImage = 'none';
                    handle.style.backgroundRepeat = 'none';
                    handle.style.backgroundPosition = '0 0';
                });

                const markers = slider.querySelectorAll('.noUi-marker');
                markers.forEach(marker => {
                    marker.style.display = 'none';
                });

                const connectBar = slider.querySelector('.noUi-connect');
                connectBar.style.display = 'none';
                connectBar.style.height = '1px';
                connectBar.style.backgroundColor = 'grey';

                const tooltips = slider.querySelectorAll('.noUi-tooltip');
                tooltips.forEach(tooltip => {
                    tooltip.style.display = 'none';
                });

                slider.noUiSlider.on('update', function (values, handle) {
                    if (handle === 0) {
                        minInput.value = Math.round(values[0]); // Округляем значение до целого числа
                    } else {
                        maxInput.value = Math.round(values[1]); // Округляем значение до целого числа
                    }
                });

                minInput.addEventListener('change', function () {
                    slider.noUiSlider.set([this.value, null]);
                });

                maxInput.addEventListener('change', function () {
                    slider.noUiSlider.set([null, this.value]);
                });


            </script>








            <script>
                function requestFullscreen() {

